# Database configuration
DB_HOST=your_db_host
DB_PORT=your_db_port
DB_NAME=your_db_name
DB_USER=your_db_username
# Password is masked for security
DB_PASSWORD=your_db_password
DB_SSL_MODE=require

# Database connection string (constructed from above values)
# DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=${DB_SSL_MODE}

# Application settings
PORT=3001
NODE_ENV=production
HEALTH_PORT=8080

# Admin password for authentication
ADMIN_PASSWORD=your_admin_password

# Email Configuration
EMAIL_HOST=your_smtp_host
EMAIL_PORT=587
EMAIL_USER=your_email_username
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=your_from_email

# WhatsApp Configuration
# The path where WhatsApp session data is stored (relative to backend directory)
WHATSAPP_SESSION_PATH=./whatsapp-sessions
# Client ID for the WhatsApp instance
WHATSAPP_CLIENT_ID=dr-agarwal-workshop
# Optional timeout in milliseconds for WhatsApp operations (default: 60000)
WHATSAPP_TIMEOUT=120000 