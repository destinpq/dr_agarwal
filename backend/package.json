    "@nestjs/platform-express": "10.0.0",
    "@nestjs/typeorm": "10.0.0",
    "@types/express": "4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "20.11.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "dotenv": "^16.5.0",
    "multer": "^1.4.5-lts.1",
    "pg": "^8.11.3",
    "qrcode-terminal": "^0.12.0",
    "reflect-metadata": "0.1.13",
